{
  "name": "seabattle-refactored",
  "version": "1.0.0",
  "description": "Refactored Sea Battle CLI Game with modern JavaScript",
  "main": "seabattle_refactored.js",
  "scripts": {
    "start": "node seabattle_refactored.js",
    "start-original": "node seabattle.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js"
  },
  "keywords": [
    "game",
    "battleship",
    "seabattle",
    "cli",
    "javascript",
    "refactored"
  ],
  "author": "EDU AI Challenge 2025",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "seabattle_refactored.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
